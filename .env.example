# Admin authentication
ADMIN_PASSWORD=your_secure_admin_password

# Email configuration (Gmail SMTP - Primary)
ADMIN_EMAIL=your-business-email@gmail.com
EMAIL_FROM=Your Business Name <your-business-email@gmail.com>
GMAIL_USER=your-business-email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# PostgreSQL database (Production)
DATABASE_URL=postgresql://username:password@hostname:port/database
DATABASE_DIRECT_URL=postgresql://username:password@hostname:port/database

# Backup Email Service (SendGrid - Optional)
SENDGRID_API_KEY=your_sendgrid_api_key_if_needed
SENDGRID_FROM=your-business-email@gmail.com

# Service Configuration
NODE_ENV=production
PORT=5000

# Optional: SMS Service (Twilio)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_FROM_NUMBER=your_twilio_phone_number
